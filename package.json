        "manager",
        "installer",
        "report",
        "cli"
    ],
    "author": "Anatolii Titov <a@toliak.ru>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/markdown-to-latex/boilerplate/issues"
    },
    "homepage": "https://github.com/markdown-to-latex/boilerplate#readme",
    "bin": {
        "md-to-latex": "./dist/cli.mjs"
    },
    "files": [
        "boilerplate/**/*",
        "dist/**/*"
    ],
    "devDependencies": {
        "@types/argparse": "^2.0.16",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.12.2",
        "@types/inquirer": "^9.0.7",
        "@types/fs-extra": "^11.0.4",
        "jest": "^29.7.0",
        "prettier": "^3.2.5",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.4.3"
    },
