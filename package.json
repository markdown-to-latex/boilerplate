{
    "name": "@md-to-latex/boilerplate",
    "version": "1.0.0-beta.1",
    "description": "MarkDown To LaTeX Boilerplate",
    "main": "dist/index.js",
    "scripts": {
        "test": "jest .",
        "build": "tsc --build",
        "dev": "npm run build && node ./dist/cli.js",
        "watch": "tsc --build --watch",
        "prettier": "prettier --check .",
        "prettier-fix": "prettier --write ."
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/markdown-to-latex/boilerplate.git"
    },
    "keywords": [
        "markdown",
        "latex",
        "manager",
        "installer",
        "report",
        "cli"
    ],
    "author": "Anatolii Titov <a@toliak.ru>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/markdown-to-latex/boilerplate/issues"
    },
    "homepage": "https://github.com/markdown-to-latex/boilerplate#readme",
    "bin": {
        "md-to-latex": "./dist/cli.js"
    },
    "files": [
        "boilerplate/**/*",
        "dist/**/*"
    ],
    "devDependencies": {
        "@types/argparse": "^2.0.10",
        "@types/jest": "^28.1.8",
        "@types/node": "^18.7.13",
        "@types/inquirer": "^8.2.3",
        "@types/fs-extra": "^9.0.13",
        "jest": "^28.1.3",
        "prettier": "^2.7.1",
        "ts-jest": "^28.0.8",
        "ts-node": "^10.9.1",
        "typescript": "^4.8.2"
    },
    "dependencies": {
        "argparse": "^2.0.1",
        "inquirer": "^8.2.4",
        "fs-extra": "^10.1.0"
    }
